// Template file for chat page

html
	head
		title= "Web chat"
		script(src='/chat.js')
		script(src='/socket.io/socket.io.js')
	body
		#content(style='width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;')
		// Here we define form elements under a div with controls class
		.controls
			input#name(style='width:350px;' placeholder='Username')
			br
			input#message-field(style='width:350px;' placeholder='Chat message')
			input#send(type='button', value='send')